<% include ../partials/header.ejs  %>

<h1>Edit Teacher's Details</h1>

<form method="post" action="/teachers">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="name" class="form-control" id="name" placeholder="Name" name="teacherName">
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="address" class="form-control" id="address" placeholder="Address" name="teacherAddress">
  </div>
  <div class="form-group">
    <label for="contact">Contact</label>
    <input type="contact" class="form-control" id="contact" placeholder="Contact" name="teacherContact">
  </div>
  <div class="form-group">
    <label for="subjects">Subjects you teach</label>
    <input type="name" class="form-control" id="parentName" placeholder="subjects" name="subjects">
  </div>
  <div class="form-group">
    <label for="classes">Classes you teach</label>
    <input type="contact" class="form-control" id="contact" placeholder="classes" name="classes">
  </div>
  <label class="radio-inline">
    <input type="radio" value="male" name="gender">
    Male
  </label>
  <label class="radio-inline">
    <input type="radio" value="female" name="gender">
    Female
  </label>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<% include ../partials/footer.ejs  %>
